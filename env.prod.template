# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# Copy this content to .env.prod and fill in your actual values
# ============================================

# Environment
NODE_ENV=production
PORT=3000

# Database (MongoDB)
# Format: mongodb://[username:password@]host[:port][/database][?options]
# Example: mongodb://user:pass@cluster.mongodb.net/sportzone?retryWrites=true&w=majority
MONGODB_URI=your-production-mongodb-connection-string

# JWT Configuration
JWT_SECRET=your-very-strong-jwt-secret-key-for-production
JWT_ACCESS_TOKEN_EXPIRATION_TIME=1h
JWT_REFRESH_TOKEN_EXPIRATION_TIME=7d

# Google OAuth (if using)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_SECRET=your-google-secret
GOOGLE_REDIRECT_URI=https://your-backend-domain.com/auth/google/callback

# Email Configuration (SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
DEFAULT_MAIL_FROM=your-email@gmail.com

# Frontend URLs
FRONTEND_URL=https://sport-zone-fe-deploy.vercel.app
# Backend API URL (for email links)
VITE_API_URL=https://your-backend-api-domain.com

# AWS S3 (for file uploads)
AWS_S3_ACCESS_KEY_ID=your-aws-access-key
AWS_S3_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_REGION=us-east-1
AWS_S3_BUCKET_NAME=your-s3-bucket-name

# VNPay Payment Gateway (Production)
vnp_TmnCode=YOUR_PRODUCTION_TMN_CODE
vnp_HashSecret=YOUR_PRODUCTION_HASH_SECRET
vnp_Url=https://vnpayment.vn/paymentv2/vpcpay.html
vnp_Api=https://vnpayment.vn/merchant_webapi/api/transaction
vnp_ReturnUrl=https://sport-zone-fe-deploy.vercel.app/payments/vnpay/return

# PayOS Payment Gateway (if using)
PAYOS_CLIENT_ID=your-payos-client-id
PAYOS_API_KEY=your-payos-api-key
PAYOS_CHECKSUM_KEY=your-payos-checksum-key
PAYOS_RETURN_URL=https://sport-zone-fe-deploy.vercel.app/payments/payos/return
PAYOS_CANCEL_URL=https://sport-zone-fe-deploy.vercel.app/payments/payos/cancel

# didit eKYC (if using)
DIDIT_API_KEY=your-didit-api-key
DIDIT_API_SECRET=your-didit-api-secret
DIDIT_WORKFLOW_ID=your-didit-workflow-id
DIDIT_BASE_URL=https://verification.didit.me
DIDIT_MOCK_MODE=false

